<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CarouselViewChallenge.Views.CarouselViewChallengePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:CarouselViewChallenge.ViewModels"
    mc:Ignorable="d">

    <ContentPage.BindingContext>
        <viewmodel:CatalogViewModel />
    </ContentPage.BindingContext>


    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="95" />
                <RowDefinition Height="*" />
                <RowDefinition Height="95" />
            </Grid.RowDefinitions>

            <BoxView Color="#7D87F1" />

            <BoxView
                Grid.Row="1"
                HeightRequest="1"
                VerticalOptions="End"
                Color="#A8A8A8" />

            <BoxView
                Grid.Row="3"
                HeightRequest="1"
                VerticalOptions="Start"
                Color="#A8A8A8" />

            <Label
                Margin="20"
                HorizontalOptions="Start"
                Style="{StaticResource TitleStyle}"
                Text="IKEA Catalog"
                VerticalOptions="End" />

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Style="{StaticResource CategorySelectedHeaderStyle}"
                    Text="Chairs" />
                <Label
                    Grid.Column="1"
                    Style="{StaticResource CategoryHeaderStyle}"
                    Text="Sofas" />
                <Label
                    Grid.Column="2"
                    Style="{StaticResource CategoryHeaderStyle}"
                    Text="Tables" />
                <Label
                    Grid.Column="3"
                    Style="{StaticResource CategoryHeaderStyle}"
                    Text="Lamps" />
            </Grid>

            <CarouselView
                x:Name="MyCarousel"
                Grid.Row="2"
                HorizontalScrollBarVisibility="Never"
                ItemsSource="{Binding Items}"
                PeekAreaInsets="{OnPlatform iOS='0, 0, 100, 0',
                                            Android='0,0,300,0',
                                            UWP='0,0,100,0'}">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout
                        Orientation="Horizontal"
                        SnapPointsAlignment="Center"
                        SnapPointsType="MandatorySingle" />
                </CarouselView.ItemsLayout>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="AUTO" />
                            </Grid.RowDefinitions>
                            <Image Source="{Binding Image}" />

                            <BoxView
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                HorizontalOptions="End"
                                WidthRequest="1"
                                Color="#A8A8A8" />

                            <StackLayout Grid.Row="1" Margin="0,10,0,10">
                                <Label Style="{StaticResource ItemName}" Text="{Binding Name}" />
                                <Label Style="{StaticResource ItemPrice}" Text="{Binding Price}" />
                            </StackLayout>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </Grid.GestureRecognizers>
                        </Grid>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

        </Grid>


    </ContentPage.Content>
</ContentPage>